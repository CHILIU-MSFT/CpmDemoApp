@{  
    ViewBag.Title = "Home Page";  
}  

  
<div>  
    <strong>Flower Shop Business Chat</strong>  
</div>  
  
<tr class="form-group">  
    @using (Html.BeginForm())  
    {  
        <table>   
            <tr>  
                <td> @Html.Label("Phone Number:")  </td>
                <td> @Html.TextBox("Phone_Number") </td>  
            </tr> 
            
            <tr>  
                <td>@Html.Label("Message:")  </td>
                <td>@Html.TextBox("Message")  </td>
            </tr>  

            <tr>  
                <td>@Html.Label("Image:")  </td>
                <td>@Html.TextBox("Image")  </td>
            </tr>  
  
            <tr>  
                <td>  
                    <input type="submit" value="Send" class="btn-primary" />  
                </td>  
  
            </tr> 
        </table>  
    }  
</tr>

<ul>
    @if(Messages.MessagesListStatic!=null)
    {
        @foreach (var message in Messages.MessagesListStatic)
        {
            <li>
                @message
            </li>
        }
    }
</ul>